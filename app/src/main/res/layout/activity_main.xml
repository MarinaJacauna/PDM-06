<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D5D8F"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="27dp"
        android:background="#FFFFFF"
        android:drawableTop="@drawable/tempo"
        android:onClick="TelaTempo"
        android:text="TEMPO"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="27dp"
        android:background="#FFFFFF"
        android:drawableTop="@drawable/peso"
        android:onClick="TelaPeso"
        android:text="PESO"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button7"
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="61dp"
        android:background="#FFFFFF"
        android:drawableTop="@drawable/temperatura"
        android:onClick="TelaTemperatura"
        android:text="TEMPERATURA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="27dp"
        android:background="#FFFFFF"
        android:drawableTop="@drawable/comprimento"
        android:onClick="TelaComprimento"
        android:text="COMPRIMENTO"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="61dp"
        android:background="#ffffff"
        android:drawableTop="@drawable/area"
        android:onClick="TelaArea"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:text="AREA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="61dp"
        android:background="#FFFFFF"
        android:drawableTop="@drawable/volume"
        android:onClick="TelaVolume"
        android:text="VOLUME"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="180dp"
        android:text="Conversor de medidas"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>